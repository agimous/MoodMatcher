<%= stylesheet_link_tag "myStyles.css" %>

<table class="signup">
<tr>
<td class="signup">
<div>
 
	<p class="albumDetails">
		Sign Up
	</p>
	
	<%= form_for @user do |f| %>

			<%= render 'shared/error_messages' %>
			
				<p> <%= f.label :name %><br>
				 <%= f.text_field :name %> </p>
			
				<p><%= f.label :email %><br>
				<%= f.email_field :email %></p>
			
				<p><%= f.label :password %><br>
				<%= f.password_field :password %></p>
			
				<p><%= f.label :password_confirmation, "Confirmation" %><br>
				<%= f.password_field :password_confirmation %></p>
			
				<p><%= f.submit "Create account" , class: "formButton" %></p>
			 
    <% end %>
  
</div>
</td>
</tr>
</table>